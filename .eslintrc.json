{
  "extends": ["next/core-web-vitals", "eslint:recommended", "plugin:jest/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": ["jest"],
  "rules": {
    "no-unused-vars": "warn",
    // "no-console": "warn",
    "no-debugger": "warn",
    "consistent-return": "warn",
    "prefer-const": [
      "warn",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": true
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
